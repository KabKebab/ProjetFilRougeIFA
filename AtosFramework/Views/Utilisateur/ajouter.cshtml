
@{
    ViewBag.Title = "ajouter";
}

<h2 class="jumbotron text-center">Ajouter un utilisateur</h2>

@using (Html.BeginForm("InsertData", "Utilisateur", FormMethod.Post))
{

<div class="form-group col-lg-12">
    <label for="exampleFormControlInput1" >Nom</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="nom" placeholder="Nom" required>
    <label for="exampleFormControlInput1">Prenom</label>
    <input type="text" class="form-control" id="prenom"  name = "prenom" placeholder="Prenom" required>
    <label for="exampleFormControlInput1">Email</label> 
    <input type="Email" class="form-control" id="email" name="email" placeholder="Email" required>
    <label for="exampleFormControlSelect1">Role</label>
    <select class="form-control" name="role" id="role" required>
        <option>Administrateur</option>
        <option>Utilisateur</option>
        <option>Commercial</option>

    </select>
    <label for="exampleFormControlInput1">Password</label>
    <input type="password" class="form-control" name="motDePasse" id="motDePasse" placeholder="ceci est le mot de passe" required>
    <input class="btn btn-success" type="submit" value=" Sauvegarder" />
    
</div>
    
}