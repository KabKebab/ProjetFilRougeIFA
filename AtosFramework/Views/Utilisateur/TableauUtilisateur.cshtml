                contentType: "application/json;",
                data: data,
                success: function (response) {


                    // alert('true');
                },
                error: function (response) {


                    alert('false');
                }
            });


            $('.modal').modal('hide');
            setTimeout(() => { MiseAjourDuTableau() }, 500);
        
        });
             
         });



