@model Udemy2.CodeFirst.UTILISATEUR
@{
    ViewBag.Title = "Utilisateur Edit";
}

<h2 class="jumbotron text-center">Edition d'un Utilisateur</h2>
@using (Ajax.BeginForm("test", "Utilisateur", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, OnSuccess = "alert('youpi')", OnFailure = "ModalClose", UpdateTargetId = "tableauResultat" }))
{
    <div hidden><input class="form-control" type="text" name="ID" id="ID" value="@item.ID" /></div>
    <Label>ID : @item.ID</Label>
    <div><Label>Nom:</Label><input class="form-control" type="text" name="Nom" id="Nom" value="@item.Nom" /></div>
    <div><Label>Prenom:</Label><input class="form-control" type="text" name="Prenom" id="Prenom" value="@item.Prenom" /></div>
    <div><Label>Email:</Label><input class="form-control" type="text" name="Email" id="Email" value="@item.Email" /></div>
    <div><Label>Role:</Label><input class="form-control" type="text" name="Role" id="Role" value="@item.Role" /></div>
    <div><Label>Mot De Passe:</Label><input class="form-control" type="password" name="MotDePasse" id="MotDePasse" value="@item.MotDePasse" /></div>
    <div> <button type="submit" class="btn btn-primary">Save changes</button></div>


}

